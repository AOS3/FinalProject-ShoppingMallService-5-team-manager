<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <data>
        <variable
            name="rowCompletedTransactionsListViewModel"
            type="com.judamie_manager.viewmodel.rowviewmodel.RowCompletedTransactionsListViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/textViewCompletedTransList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingEnd="8dp"
            android:text="@{rowCompletedTransactionsListViewModel.textViewCompletedTransListText}"
            android:textSize="16sp" />


    </LinearLayout>
</layout>
